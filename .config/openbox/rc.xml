    <action name="MoveResizeTo">
      <height>2/6</height>
    </action>
  </keybind>
  <keybind key="W-3">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo">
      <width>3/6</width>
    </action>
  </keybind>
  <keybind key="W-A-3">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo">
      <height>3/6</height>
    </action>
  </keybind>
  <keybind key="W-4">
