        <direction>north</direction>
      </action>
    </keybind>
    <keybind key="S-l">
      <action name="GrowToEdge">
        <direction>east</direction>
      </action>
    </keybind>
  </keybind>

  <!-- Keybindings for window switching -->
  <keybind key="A-Tab">
    <action name="NextWindow">
      <bar>no</bar>
      <finalactions>
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </finalactions>
    </action>
  </keybind>
  <keybind key="A-S-Tab">
    <action name="PreviousWindow">
      <bar>no</bar>
      <finalactions>
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </finalactions>
    </action>
  </keybind>
  <keybind key="C-A-Tab">
    <action name="NextWindow">
      <panels>yes</panels><desktop>yes</desktop>
      <finalactions>
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </finalactions>
    </action>
  </keybind>
  <keybind key="W-h">
    <action name="PreviousWindow">
      <interactive>no</interactive>
      <linear>yes</linear>
      <raise>yes</raise>
    </action>
  </keybind>
  <keybind key="W-l">
    <action name="NextWindow">
      <interactive>no</interactive>
      <linear>yes</linear>
      <raise>yes</raise>
    </action>
  </keybind>
  <keybind key="W-j">
    <action name="NextWindow">
      <bar>no</bar>
      <raise>yes</raise>
    </action>
  </keybind>
  <keybind key="W-k">
    <action name="PreviousWindow">
      <bar>no</bar>
      <raise>yes</raise>
    </action>
  </keybind>

  <!-- Keybindings for window switching with the arrow keys -->
  <keybind key="W-S-Right">
    <action name="DirectionalCycleWindows">
      <direction>right</direction>
    </action>
  </keybind>
  <keybind key="W-S-Left">
    <action name="DirectionalCycleWindows">
      <direction>left</direction>
    </action>
  </keybind>
  <keybind key="W-S-Up">
    <action name="DirectionalCycleWindows">
      <direction>up</direction>
    </action>
  </keybind>
  <keybind key="W-S-Down">
    <action name="DirectionalCycleWindows">
      <direction>down</direction>
    </action>
  </keybind>

  <!-- Backlight control -->
  <keybind key="W-A-bracketleft">
    <action name="Execute">
      <command>bash -c 'xbacklight -dec 10 &amp;&amp; notify-send -t 500 "Backlight: $(xbacklight -get)%"'</command>
    </action>
  </keybind>
  <keybind key="W-A-bracketright">
    <action name="Execute">
      <command>bash -c 'xbacklight -inc 10 &amp;&amp; notify-send -t 500 "Backlight: $(xbacklight -get)%"'</command>
    </action>
  </keybind>

  <!-- Volume control -->
  <keybind key="W-bracketleft">
    <action name="Execute">
      <command>bash -c 'amixer -c 0 set Master 3%- unmute | egrep "Left|Mono" | egrep -o [0-9]+% | notify-send -t 500 "Volume: $(cat)"'</command>
    </action>
  </keybind>
  <keybind key="W-bracketright">
    <action name="Execute">
      <command>bash -c 'amixer -c 0 set Master 3%+ unmute | egrep "Left|Mono" | egrep -o [0-9]+% | notify-send -t 500 "Volume: $(cat)"'</command>
    </action>
  </keybind>
  <keybind key="W-v">
    <keybind key="1">
      <action name="Execute">
        <command>bash -c 'amixer -c 0 set Master 10% unmute; notify-send -t 500 "Volume: 10%"'</command>
      </action>
    </keybind>
    <keybind key="2">
      <action name="Execute">
        <command>bash -c 'amixer -c 0 set Master 20% unmute; notify-send -t 500 "Volume: 20%"'</command>
      </action>
    </keybind>
    <keybind key="3">
      <action name="Execute">
        <command>bash -c 'amixer -c 0 set Master 30% unmute; notify-send -t 500 "Volume: 30%"'</command>
      </action>
    </keybind>
    <keybind key="4">
      <action name="Execute">
        <command>bash -c 'amixer -c 0 set Master 40% unmute; notify-send -t 500 "Volume: 40%"'</command>
      </action>
    </keybind>
    <keybind key="5">
      <action name="Execute">
        <command>bash -c 'amixer -c 0 set Master 50% unmute; notify-send -t 500 "Volume: 50%"'</command>
      </action>
    </keybind>
    <keybind key="6">
      <action name="Execute">
        <command>bash -c 'amixer -c 0 set Master 60% unmute; notify-send -t 500 "Volume: 60%"'</command>
      </action>
    </keybind>
    <keybind key="7">
      <action name="Execute">
        <command>bash -c 'amixer -c 0 set Master 70% unmute; notify-send -t 500 "Volume: 70%"'</command>
      </action>
    </keybind>
    <keybind key="8">
      <action name="Execute">
        <command>bash -c 'amixer -c 0 set Master 80% unmute; notify-send -t 500 "Volume: 80%"'</command>
      </action>
    </keybind>
    <keybind key="v">
      <action name="Execute">
        <command>bash -c 'amixer -c 0 get Master | egrep "Left|Mono" | egrep -o [0-9]+% | notify-send -t 1000 "Volume: $(cat)"'</command>
      </action>
    </keybind>
  </keybind>

  <!-- Edit various configurations -->
  <keybind key="W-c">
    <keybind key="c">
      <action name="Execute">
        <command>kitty --class crontab -T crontab -e bash -ic 'crontab -e &amp;&amp; crontab -l &gt; ~/crontab'</command>
      </action>
    </keybind>
    <keybind key="h">
      <action name="Execute">
        <command>kitty --class visual -T helix/config.toml -e bash -ic 'cd ~/.config/helix &amp;&amp; ${VISUAL:-$EDITOR} config.toml'</command>
      </action>
    </keybind>
    <keybind key="k">
      <action name="Execute">
        <command>bash -ic 'kitty --class visual -T kanata/kanata.kbd --session - &lt; &lt;(printf "cd ~/.config/kanata\nlayout tall\nlaunch --bias 40 journalctl -fu kanata.service\nlaunch ${VISUAL:-$EDITOR} kanata.kbd\nfocus\n")'</command>
      </action>
    </keybind>
    <keybind key="o">
      <action name="Execute">
        <command>kitty --class visual -T openbox/rc.xml -e bash -ic 'cd ~/.config/openbox &amp;&amp; ${VISUAL:-$EDITOR} rc.xml'</command>
      </action>
    </keybind>
    <keybind key="s">
      <keybind key="j">
        <action name="Execute">
          <command>kitty --class visual -e bash -ic 'cd ~/.vim/snippets/javascript &amp;&amp; ${VISUAL:-$EDITOR} javascript.snippets'</command>
        </action>
      </keybind>
    </keybind>
    <keybind key="t">
      <action name="Execute">
        <command>kitty --class visual -T .tmux.conf -e bash -ic '${VISUAL:-$EDITOR} ~/.tmux.conf'</command>
      </action>
    </keybind>
    <keybind key="v">
      <action name="Execute">
        <command>kitty --class visual -T .vimrc -e bash -ic '${VISUAL:-$EDITOR} ~/.vimrc'</command>
      </action>
    </keybind>
  </keybind>

  <!-- General actions -->
  <keybind key="W-S-F6">
    <action name="Execute">
      <!-- Enable and turn on every connected monitors -->
      <command>xrandr --auto</command>
    </action>
  </keybind>
  <keybind key="W-S-F7">
    <action name="Execute">
      <!-- Turn off monitors until key press or mouse move -->
      <command>bash -c 'sleep 1; xset dpms force off'</command>
    </action>
  </keybind>
  <keybind key="Print">
    <action name="Execute">
      <command>scrot ~/Pictures/Screenshot-%Y-%m-%d_%H:%M:%S.png</command>
    </action>
  </keybind>
  <keybind key="S-Print">
