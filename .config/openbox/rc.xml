    </action>
  </keybind>
  <keybind key="W-5">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo">
      <width>5/6</width>
    </action>
  </keybind>
  <keybind key="W-A-5">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo">
      <height>5/6</height>
    </action>
  </keybind>
  <keybind key="W-6">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo">
      <width>6/6</width>
    </action>
    <action name="Maximize">
      <direction>horizontal</direction>
    </action>
  </keybind>
  <keybind key="W-A-6">
