    </keybind>
    <keybind key="t">
      <action name="ToggleAlwaysOnTop"/>
    </keybind>
    <keybind key="equal">
      <action name="ToggleMaximize"/>
    </keybind>
    <keybind key="minus">
      <action name="ToggleMaximize">
        <direction>horizontal</direction>
      </action>
    </keybind>
    <keybind key="backslash">
      <action name="ToggleMaximize">
        <direction>vertical</direction>
      </action>
    </keybind>
  </keybind>

  <!-- Window resize and size presets -->
  <keybind key="W-minus">
    <action name="Unmaximize"/>
    <action name="ResizeRelative">
      <left>-16</left>
      <right>-16</right>
      <top>-9</top>
      <bottom>-9</bottom>
    </action>
  </keybind>
  <keybind key="W-equal">
    <action name="Unmaximize"/>
    <action name="ResizeRelative">
      <left>16</left>
      <right>16</right>
      <top>9</top>
      <bottom>9</bottom>
    </action>
  </keybind>
  <keybind key="W-0">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo">
      <x>0</x>
      <y>0</y>
      <width>100%</width>
      <height>100%</height>
    </action>
    <action name="Maximize"/>
  </keybind>
  <keybind key="W-1">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo">
      <width>1/6</width>
    </action>
  </keybind>
  <keybind key="W-A-1">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo">
      <height>1/6</height>
    </action>
  </keybind>
  <keybind key="W-2">
